

SELECT    SPRIDEN_PIDM"PIDM", SPRIDEN_ID"PVAMU_ID", SPRIDEN_LAST_NAME"LAST_NAME", SPRIDEN_FIRST_NAME"FIRST_NAME", SPRIDEN_MI"MI_NAME", SPBPERS_SSN"SSN", To_Char(SPBPERS_ACTIVITY_DATE,'MM/DD/YYYY')"ACTIVITY" 
FROM      SPRIDEN@PROD 
LEFT JOIN SPBPERS@PROD ON SPBPERS_PIDM=SPRIDEN_PIDM 
WHERE     SPRIDEN_ID IN('P22382929','P22102803','P21766285') ;


