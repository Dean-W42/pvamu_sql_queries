              from          a))
      select               "pidm", "term", "ptrm", "lvl", "styp", "tsi", 
        case  when         "tsi" in('NCR','RR') then 'No' else 'Yes' end "status"
        from  a 
  inner join  enrl          on "enrl_pidm"="pidm"
   left join  tsi           on "tsi_pidm"="pidm" ;


